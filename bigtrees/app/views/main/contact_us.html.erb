<div class = "row header-image sub-page-header">
	<div class = "col-md-6 col-md-offset-3 sub-header-column">
		<div class = "sub-page-header-title">
			<div class = "sub-page-header-text">
				Contact Us
			</div>
		</div>
	</div>
</div>

<div class = "row white-row">
	<div class = "col-md-4 col-md-offset-3">
		<div id = "contact-form">
			<%= form_tag url_for(:controller => 'estimate', :action => 'submit_new_estimate'), :method => 'post' do %>
				<table class = "form-table">
					<tr>
						<td>
							Name: <br />
							<%= text_field_tag 'name', '', :required => true %>
						</td>
					</tr>
					<tr>
						<td>
							Email: <br />
							<%= text_field_tag 'email', '', :required => true %>
						</td>
					</tr>
					<tr>
						<td>
						Message: <br />
						<%= text_area_tag 'message', '', :required => true %>
						</td>
					</tr>
					
				</table>
			
			<% end %>
		
		</div>
	</div>
</div>

